#!/bin/sh
~/dotfiles/scripts/screenlayout.sh &                                                            # screenlayout
nitrogen --restore &                                                                            # wallpaper
picom --experimental-backend &                                                                  # compositor
greenclip daemon &                                                                              # rofi clipboard manager
flameshot &                                                                                     # screenshot tool
nm-applet &                                                                                     # network-manager-applet kann -Rns werden falls qtile widget hat
easyeffects --gapplication-service &                                                            # start easyeffects in background
# dbus-update-activation-environment DISPLAY XAUTHORITY WAYLAND_DISPLAY &                       # make gnome-keyring work (wayland method) arch wiki gnome-keyring
dbus-update-activation-environment --all &                                                      # make gnome-keyring work (not the wayland method) arch wiki gnome-keyring
gnome-keyring-daemon --start --components=secrets &                                             # i dont know if i need this because of "systemctl --user enable gnome-keyring-daemon --now"
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &                                     # start polkit nome agent
xinput --set-prop 'Logitech G203 Prodigy Gaming Mouse' 312 0, 1 &                               # disable "libinput Accel Profile Enabled"
xset -dpms &                                                                                    # disable energy features
xset s off &                                                                                    # disable screensaver 
#alles dar√ºber kann ich auch in qtile autostart machen
xrdb -merge ~/.Xresources                                                                       # merge Xresources file
exec qtile start
